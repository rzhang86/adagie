# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Lobby.index()
POST    /                           controllers.Lobby.readLoginForm()
GET     /signup                     controllers.Lobby.signup()
POST    /signup                     controllers.Lobby.readSignupForm()

GET     /home                       controllers.Application.home()
POST    /home                       controllers.Application.readVideoEndedForm()
POST    /answer                     controllers.Application.readChallengeAnswerForm()
GET     /profile                    controllers.Application.myProfile()
POST    /profile                    controllers.Application.readFinancialInstitutionLoginForm()
GET     /deleteLogin/:id            controllers.Application.deleteFinancialInstitutionLogin(id: Long)
GET     /videos                     controllers.Application.myVideos()
POST    /videos                     controllers.Application.readUploadVideoForm()
GET     /delete/:videoId            controllers.Application.deleteVideo(videoId: Long)
GET     /logout                     controllers.Application.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
