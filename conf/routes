# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Index.get()
POST    /                           controllers.Index.post()
GET     /login                      controllers.Login.get()
POST    /login                      controllers.Login.post()
GET     /logout                     controllers.Login.logout()
GET     /signup                     controllers.Signup.get()
POST    /signup                     controllers.Signup.post()
GET     /uploadVideo                controllers.UploadVideo.get()
POST    /uploadVideo                controllers.UploadVideo.post()
GET     /yourVideos                 controllers.YourVideos.get()
GET     /deleteVideo/:videoId       controllers.YourVideos.deleteVideo(videoId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
