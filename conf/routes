# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /                           controllers.Application.readVideoEndedForm()
GET     /profile                    controllers.Application.myProfile()
GET     /videos                     controllers.Application.myVideos()
GET     /upload                     controllers.Application.uploadVideo()
POST    /upload                     controllers.Application.readUploadVideoForm()
GET     /delete/:videoId            controllers.Application.deleteVideo(videoId: Long)
GET     /login                      controllers.Login.login()
POST    /login                      controllers.Login.readLoginForm()
GET     /logout                     controllers.Login.logout()
GET     /signup                     controllers.Login.signup()
POST    /signup                     controllers.Login.readSignupForm()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
